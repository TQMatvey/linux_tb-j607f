#include "qcom-msm8974pro.dtsi"
#include "qcom-pm8841.dtsi"
#include "qcom-pm8941.dtsi"
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>
#include <dt-bindings/pinctrl/qcom,pmic-gpio.h>

#define FRONT_CAM_2MP 0 // Old - OV2685
#define REAR_CAM_8MP  0 // Old - OV8865

#define FRONT_CAM_5MP 0 // New - OV5670
#define REAR_CAM_12MP 0 // New - OV12870

/ {
	model = "Fairphone 2";
	compatible = "fairphone,fp2", "qcom,msm8974";

	aliases {
		mmc0 = &sdhc_1;
		mmc1 = &sdhc_2;
		serial0 = &blsp1_uart2;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	gpio-keys {
		compatible = "gpio-keys";

		pinctrl-names = "default";
		pinctrl-0 = <&gpio_keys_pin_a>;

		key-camera-snapshot {
			label = "camera_snapshot";
			gpios = <&pm8941_gpios 1 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_CAMERA>;
			wakeup-source;
			debounce-interval = <15>;
		};

		key-volume-down {
			label = "volume_down";
			gpios = <&pm8941_gpios 2 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_VOLUMEDOWN>;
			wakeup-source;
			debounce-interval = <15>;
		};

		key-volume-up {
			label = "volume_up";
			gpios = <&pm8941_gpios 5 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_VOLUMEUP>;
			wakeup-source;
			debounce-interval = <15>;
		};
	};

	/*
	 * This models two fixed regulators, one providing 2.8V (AVDD_2P8) and
	 * one providing 1.8V (DVDD_1P8). Both have the same vin-supply and
	 * gpio and therefore modelled as one.
	 */
	reg_front_cam: regulator-front-camera {
		compatible = "regulator-fixed";
		regulator-name = "vdd_front_cam";
		regulator-min-microvolt = <2800000>;
		regulator-max-microvolt = <2800000>;

		gpio = <&tlmm 18 GPIO_ACTIVE_HIGH>;
		enable-active-high;

		vin-supply = <&pm8941_l22>;

		pinctrl-0 = <&vdd_front_cam_en_default>;
		pinctrl-names = "default";
	};

	//fake-reg-mclk2 { // FIXME remove
	//	compatible = "regulator-fixed-clock";
	//	regulator-name = "fake-reg-mclk2";
	//	pinctrl-names = "default";
	//	pinctrl-0 = <&mclk2_pin_a>;
	//	clocks = <&mmcc CAMSS_MCLK2_CLK>;
	//	regulator-always-on;
	//};

	vibrator {
		compatible = "gpio-vibrator";
		enable-gpios = <&tlmm 86 GPIO_ACTIVE_HIGH>;
		vcc-supply = <&pm8941_l18>;
	};
};

&blsp1_i2c2 {
	status = "okay";

	/*
	 * FP2 has two display modules, old version has Synaptics S3351
	 * touchscreen, new version has Ilitek ILI2120 touchscreen.
	 */

	touchscreen@20 {
		compatible = "syna,rmi4-i2c";
		reg = <0x20>;

		interrupts-extended = <&tlmm 28 IRQ_TYPE_LEVEL_LOW>;

		syna,reset-delay-ms = <100>;
		syna,startup-delay-ms = <160>;

		#address-cells = <1>;
		#size-cells = <0>;

		status = "disabled";

		rmi4-f01@1 {
			reg = <0x1>;
			syna,nosleep-mode = <1>;
		};

		rmi4-f12@12 {
			reg = <0x12>;
			syna,sensor-type = <1>;
			touchscreen-inverted-y;
		};
	};

	touchscreen@41 {
		compatible = "ilitek,ili2120";
		reg = <0x41>;
		interrupt-parent = <&tlmm>;
		interrupts = <28 IRQ_TYPE_EDGE_FALLING>;
		reset-gpios = <&tlmm 55 GPIO_ACTIVE_LOW>;

		touchscreen-size-x = <1080>;
		touchscreen-size-y = <1920>;

		status = "disabled";
	};
};

&blsp1_uart2 {
	status = "okay";
};

&camss {
	status = "okay";

	vdda-supply = <&pm8941_l12>;

	ports {
		#if REAR_CAM_8MP || REAR_CAM_12MP
		port@0 {
			reg = <0>;
			csiphy0_ep: endpoint {
				clock-lanes = <1>;
				data-lanes = <0 2 3 4>;
				#if REAR_CAM_8MP
				link-frequencies = /bits/ 64 <360000000>;
				remote-endpoint = <&ov8865_ep>;
				#endif
				#if REAR_CAM_12MP
				#error "TODO: OV12870 not implemented yet"
				#endif
			};
		};
		#endif

		#if FRONT_CAM_2MP || FRONT_CAM_5MP
		port@2 {
			reg = <2>;
			csiphy2_ep: endpoint {
				clock-lanes = <1>;
				data-lanes = <0>;
				#if FRONT_CAM_2MP
				link-frequencies = /bits/ 64 <330000000>;
				remote-endpoint = <&ov2685_ep>;
				#endif
				#if FRONT_CAM_5MP
				link-frequencies = /bits/ 64 <422400000>;
				remote-endpoint = <&ov5670_ep>;
				#endif
			};
		};
		#endif
	};
};

&cci {
	status = "okay";
};

&cci_i2c0 {
	#if REAR_CAM_8MP
	// ad5823: coil@c {
	// 	compatible = "adi,ad5823";
	// 	reg = <0x0c>;

	// 	VANA-supply = <&pm8941_l23>;
	// 	/* enable-gpios is shared with OV8865 powerdown-gpios */
	// };

	ov8865: camera-sensor@10 {
		compatible = "ovti,ov8865";
		reg = <0x10>;

		pinctrl-0 = <&mclk0_pin_a>;
		pinctrl-names = "default";

		clocks = <&mmcc CAMSS_MCLK0_CLK>;

		avdd-supply = <&pm8941_l17>;
		dovdd-supply = <&pm8941_lvs3>;
		dvdd-supply = <&pm8941_l3>;

		powerdown-gpios = <&tlmm 89 GPIO_ACTIVE_LOW>;
		reset-gpios = <&tlmm 90 GPIO_ACTIVE_LOW>;

		/* Rear camera */
		orientation = <1>;
		rotation = <90>; // TODO validate

		// lens-focus = <&ad5823>;
		// flash-leds = <&...>;

		port {
			ov8865_ep: endpoint {
				data-lanes = <1 2 3 4>;
				link-frequencies = /bits/ 64 <360000000>;
				remote-endpoint = <&csiphy0_ep>;
			};
		};
	};
	#endif
	#if REAR_CAM_12MP
	ov12870: camera-sensor@36 {
		compatible = "ovti,ov12870";
		reg = <0x36>;

		#error "TODO: OV12870 not implemented yet (no driver)"
	};
	#endif
};

&cci_i2c1 {
	#if FRONT_CAM_2MP
	ov2685: camera-sensor@10 {
		compatible = "ovti,ov2685";
		reg = <0x10>;

		pinctrl-0 = <&mclk2_pin_a>;
		pinctrl-names = "default";

		clocks = <&mmcc CAMSS_MCLK2_CLK>;
		clock-names = "xvclk";

		avdd-supply = <&reg_front_cam>; /* AVDD_2P8 */
		dovdd-supply = <&reg_front_cam>; /* DVDD_1P8 */
		dvdd-supply = <&reg_front_cam>; /* DVDD_1P8 */

		/* XSHUTDOWN pin unused, connected to DOVDD */

		/* Front camera */
		orientation = <0>;
		rotation = <270>; // TODO validate

		port {
			ov2685_ep: endpoint {
				data-lanes = <1>;
				link-frequencies = /bits/ 64 <330000000>;
				remote-endpoint = <&csiphy2_ep>;
			};
		};
	};
	#endif
	#if FRONT_CAM_5MP
	ov5670: camera-sensor@10 {
		compatible = "ovti,ov5670";
		reg = <0x10>;

		pinctrl-0 = <&mclk2_pin_a>;
		pinctrl-names = "default";

		clocks = <&mmcc CAMSS_MCLK2_CLK>;

		avdd-supply = <&reg_front_cam>; /* AVDD_2P8 */
		dovdd-supply = <&reg_front_cam>; /* DVDD_1P8 */
		dvdd-supply = <&reg_front_cam>; /* DVDD_1P8 */

		/* XSHUTDOWN pin unused, connected to DOVDD */

		/* Front camera */
		orientation = <0>;
		rotation = <90>; // TODO validate

		port {
			ov5670_ep: endpoint {
				data-lanes = <1>;
				link-frequencies = /bits/ 64 <422400000>;
				remote-endpoint = <&csiphy2_ep>;
			};
		};
	};
	#endif
};

&dsi0 {
	status = "okay";

	vdda-supply = <&pm8941_l2>;
	vdd-supply = <&pm8941_l22>;
	vddio-supply = <&pm8941_l12>;

	panel: panel@0 {
		reg = <0>;
		compatible = "fairphone,fp2-panel";

		reset-gpios = <&pm8941_gpios 19 GPIO_ACTIVE_LOW>;

		pinctrl-names = "default";
		pinctrl-0 = <&panel_pin>;

		port {
			panel_in: endpoint {
				remote-endpoint = <&dsi0_out>;
			};
		};
	};
};

&dsi0_out {
	remote-endpoint = <&panel_in>;
	data-lanes = <0 1 2 3>;
};

&dsi0_phy {
	status = "okay";

	vddio-supply = <&pm8941_l12>;
};

&gpu {
	status = "okay";
};

&imem {
	reboot-mode {
		mode-normal = <0x77665501>;
		mode-bootloader = <0x77665500>;
		mode-recovery = <0x77665502>;
	};
};

&mdss {
	status = "okay";
};

&otg {
	status = "okay";

	phys = <&usb_hs1_phy>;
	phy-select = <&tcsr 0xb000 0>;
	extcon = <&smbb>, <&usb_id>;
	vbus-supply = <&chg_otg>;

	hnp-disable;
	srp-disable;
	adp-disable;

	ulpi {
		phy@a {
			status = "okay";

			v1p8-supply = <&pm8941_l6>;
			v3p3-supply = <&pm8941_l24>;

			extcon = <&smbb>;
			qcom,init-seq = /bits/ 8 <0x1 0x64>;
		};
	};
};

&pm8941_gpios {
	gpio_keys_pin_a: gpio-keys-active-state {
		pins = "gpio1", "gpio2", "gpio5";
		function = "normal";

		bias-pull-up;
		power-source = <PM8941_GPIO_S3>;
	};
};

&pm8941_lpg {
	status = "okay";

	qcom,power-source = <1>;

	multi-led {
		color = <LED_COLOR_ID_RGB>;
		function = LED_FUNCTION_STATUS;

		#address-cells = <1>;
		#size-cells = <0>;

		led@7 {
			reg = <7>;
			color = <LED_COLOR_ID_RED>;
		};

		led@6 {
			reg = <6>;
			color = <LED_COLOR_ID_GREEN>;
		};

		led@5 {
			reg = <5>;
			color = <LED_COLOR_ID_BLUE>;
		};
	};
};

&pronto {
	status = "okay";

	vddmx-supply = <&pm8841_s1>;
	vddcx-supply = <&pm8841_s2>;
	vddpx-supply = <&pm8941_s3>;

	pinctrl-names = "default";
	pinctrl-0 = <&wcnss_pin_a>;

	iris {
		vddxo-supply = <&pm8941_l6>;
		vddrfa-supply = <&pm8941_l11>;
		vddpa-supply = <&pm8941_l19>;
		vdddig-supply = <&pm8941_s3>;
	};

	smd-edge {
		qcom,remote-pid = <4>;
		label = "pronto";

		wcnss {
			status = "okay";
		};
	};
};

&remoteproc_adsp {
	status = "okay";
	cx-supply = <&pm8841_s2>;
};

&remoteproc_mss {
	status = "okay";
	cx-supply = <&pm8841_s2>;
	mss-supply = <&pm8841_s3>;
	mx-supply = <&pm8841_s1>;
	pll-supply = <&pm8941_l12>;
};

